{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "baseUrl": "src",
    "paths": {
      "@assets": [ "assets/" ],
      "@env/*": [ "environments/*" ],
      "@layouts/*": [ "app/layouts/*" ],
      "@login/*": [ "app/login/*" ],
      "@services/*": [ "app/services/*" ],
      "@shared/*": [ "app/shared/*" ]
    },

    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
  }
